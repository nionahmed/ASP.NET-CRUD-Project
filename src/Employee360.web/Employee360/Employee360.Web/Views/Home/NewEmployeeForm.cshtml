@model EmpCombineModel;

@{
    ViewData["Title"] = "NewEmployeeForm";
}

<form asp-controller="Home" asp-action="ToNewEmployeeForm" method="post">
    <div class="d-flex p-2 bd-highlight">Employee Details</div>
    <div class="d-inline-flex p-2 bd-highlight">Personal Details</div>
    <div class="p-2 bg-light border">
    <div class="form-group">
        <label asp-for="PersonalInfo.Name" for="name">Full Name</label>
        <input type="text" class="form-control" id="Name" placeholder="Enter your full name here">
    </div>

    <div class="form-group">
        <label asp-for="PersonalInfo.FatherName" for="fathername">Father's Name</label>
        <input type="text" class="form-control" id="FatherName" placeholder="Enter your father name here">
    </div>

    <div class="form-group">
        <label asp-for="PersonalInfo.MotherName" for="mothername">Mother's Name</label>
        <input type="text" class="form-control" id="MotherName" placeholder="Enter your mother name here">
    </div>

    <div class="form-group">
        <label asp-for="PersonalInfo.Email" for="email">Email</label>
        <input type="email" class="form-control" id="Email" placeholder="Enter your email here">
    </div>

    <div class="form-group">
        <label asp-for="PersonalInfo.Phone" for="phone">Phone Number</label>
        <input type="text" class="form-control" id="PhoneNumber" placeholder="Enter your phone number here">
    </div>

    <div class="form-group">
        <label asp-for="PersonalInfo.Address" for="address">Present Address</label>
        <input type="text" class="form-control" id="Address" placeholder="Enter your Address here">
    </div>

    <div class="form-group">
        <label asp-for="PersonalInfo.Dob" for="dob">Data of Birth</label>
        <input type="date" class="form-control" id="Dob" placeholder="Enter your Date of Birth here">
    </div>
    </div>
    
    <div class="d-inline-flex p-2 bd-highlight">Official Details</div>
    <div class="p-2 bg-light border">
    <div class="form-group">
        <label asp-for="OfficialInfo.Post" for="post">Position/Role</label>
        <input type="text" class="form-control" id="Post" placeholder="Enter your Current Position here">
    </div>

    <div class="form-group">
        <label asp-for="OfficialInfo.Salary" for="salary">Gross Salary</label>
        <input type="number" class="form-control" id="Salary" placeholder="Enter your Gross Salary here">
    </div>

    <div class="form-group">
        <label asp-for="OfficialInfo.Incperiod" for="incperiod">Gross Salary</label>
        <input type="number" class="form-control" id="Incperiod" placeholder="Enter your Increment period here">
    </div>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>

    
</form>

