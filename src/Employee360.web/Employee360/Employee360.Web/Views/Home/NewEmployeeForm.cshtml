@model EmpDataViewModel;

@{
    ViewData["Title"] = "NewEmployeeForm";
}

<form asp-controller="Home" asp-action="AddNewEmpPloyeeToDb" method="post">
    <div class="d-flex p-2 bd-highlight">Employee Details</div>
    <div class="d-inline-flex p-2 bd-highlight">Personal Details</div>
    <div class="p-2 bg-light border">
    <div class="form-group">
            <label for="name">Full Name</label>
            <input asp-for="Name" type="text" class="form-control" id="Name" placeholder="Enter your full name here">
    </div>

    <div class="form-group">
        <label for="fathername">Father's Name</label>
        <input asp-for="FatherName" type="text" class="form-control" id="FatherName" placeholder="Enter your father name here">
    </div>

    <div class="form-group">
            <label for="mothername">Mother's Name</label>
            <input asp-for="MotherName" type="text" class="form-control" id="MotherName" placeholder="Enter your mother name here">
    </div>

    <div class="form-group">
            <label for="email">Email</label>
            <input asp-for="Email" type="email" class="form-control" id="Email" placeholder="Enter your email here">
    </div>

    <div class="form-group">
            <label for="phone">Phone Number</label>
            <input asp-for="Phone" type="text" class="form-control" id="PhoneNumber" placeholder="Enter your phone number here">
    </div>

    <div class="form-group">
            <label for="address">Present Address</label>
            <input asp-for="Address" type="text" class="form-control" id="Address" placeholder="Enter your Address here">
    </div>

    <div class="form-group">
            <label for="dob">Data of Birth</label>
            <input asp-for="Dob" type="date" class="form-control" id="Dob" placeholder="Enter your Date of Birth here">
    </div>
    </div>
    
    <div class="d-inline-flex p-2 bd-highlight">Official Details</div>
    <div class="p-2 bg-light border">
    <div class="form-group">
            <label for="post">Position/Role</label>
        <input asp-for="Post" type="text" class="form-control" id="Post" placeholder="Enter your Current Position here">
    </div>

    <div class="form-group">
            <label for="salary">Gross Salary</label>
            <input asp-for="Salary" type="number" class="form-control" id="Salary" placeholder="Enter your Gross Salary here">
    </div>

    <div class="form-group">
        <label for="incperiod">Increment Period</label>
            <input asp-for="Incperiod" type="number" class="form-control" id="Incperiod" placeholder="Enter your Increment period here">
    </div>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>

    
</form>

